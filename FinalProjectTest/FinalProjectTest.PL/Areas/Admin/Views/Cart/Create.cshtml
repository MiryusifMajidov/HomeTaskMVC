@using FinalProjectTest.Model.Dtos.CartDtos
@model CreateCartDto



<div class="col-lg-12">
 
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
        </div>
    <form method="post" enctype="multipart/form-data" class="user">

            <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0" style="margin-button:20px">
                    <input asp-for="Tittle" class="form-control form-control-user">
                </div>
                <div class="col-sm-6" style="margin-button:20px">
                    <input asp-for="Icon" class="form-control form-control-user">
                </div>
                <br>
                <br>

                <div class="col-sm-6">
                    <textarea class="form-control" asp-for="Description" style="height: 100px"></textarea>
                </div>

                <div class="col-sm-6">
                    <input asp-for="Image">
                </div>

            <button type="submit" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-flag"></i>
                </span>
                <span class="text">add</span>
            </button>


                

            </div>
         
        </form>
       

</div>